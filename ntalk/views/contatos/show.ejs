<%- include('../header'); %>

  <header class="row-fluid text-center">
    <h2>Ntalk - Dados do contato</h2>
  </header>
  <section class="row-fluid text-center">
    <form action="/contato/<%- contato._id %>?_method=delete" method="post" class="well form-inline">
      <input type="hidden" name="_csrf" value="<%- _csrf %>">
      <p>
        <label>Nome:</label>
        <span class="input-medium uneditable-input"><%- contato.nome %></span>
      </p>
      <p>
        <label>E-mail:</label>
        <span class="input-medium uneditable-input"><%- contato.email %></span>
      </p>
      <p>
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a href="/contato/<%- contato._id %>/editar" class="btn btn-info">Editar</a>
      </p>
    </form>
  </section>

<%- include('../exit'); %>
<%- include('../footer'); %>
